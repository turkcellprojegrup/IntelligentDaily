<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tolls="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    tolls:context=".AddHealthActivity"
    android:orientation="vertical"
    android:background="@color/colorBlue">


    <EditText
        android:id="@+id/user_notes_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="140dp"
        android:hint="Sağlık bilgilerini giriniz"
        android:inputType="textPersonName"
        tools:text="Not" />

    <Button
        android:id="@+id/add_health_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorBluee"
        android:text="Sağlık bilgisi ekle"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/go_to_notes_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorBluee"
        android:lineSpacingExtra="8sp"
        android:text="Notlarım"
        android:textColor="@color/colorWhite"/>



</LinearLayout>
