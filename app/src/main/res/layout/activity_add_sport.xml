<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSportActivity"
    android:orientation="vertical"
    android:background="@color/colorBlue">


    <EditText
        android:id="@+id/user_sport_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="140dp"
        android:hint="Spor bilgilerini giriniz"
        android:inputType="textPersonName"
        tools:text="Not"
        />

    <Button
        android:id="@+id/add_sports_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorBluee"
        android:text="Spor bilgisi ekle"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <Button
        android:id="@+id/go_to_notes_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorBluee"
        android:text="NotlarÄ±m"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/button"
        android:layout_width="321dp"
        android:layout_height="73dp"
        android:rotationX="8"
        android:rotationY="-360"
        android:text="Button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="341dp"
        android:layout_height="90dp"
        android:text="Button" />


</LinearLayout>
